@model DashboardViewModel
@{
    ViewData["Title"] = "Painel";
}
<div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-4">
    <div class="card">
        <div class="card-title">Imóveis Disponíveis</div>
        <div class="card-value">@Model.ImoveisDisponiveis</div>
    </div>
    <div class="card">
        <div class="card-title">Imóveis em Negociação</div>
        <div class="card-value">@Model.ImoveisEmNegociacao</div>
    </div>
    <div class="card">
        <div class="card-title">Pendências Críticas</div>
        <div class="card-value text-red-600">@Model.PendenciasCriticas</div>
    </div>
    <div class="card">
        <div class="card-title">Vistorias Pendentes</div>
        <div class="card-value">@Model.VistoriasPendentes</div>
    </div>
</div>
