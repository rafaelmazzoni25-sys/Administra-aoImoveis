<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Administração de Imóveis</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-slate-100 min-h-screen">
    <header class="bg-sky-900 text-white shadow">
        <div class="container mx-auto px-4 py-4 flex items-center justify-between">
            <a class="text-xl font-semibold" asp-controller="Home" asp-action="Index">Administração de Imóveis</a>
            <nav class="space-x-4 text-sm uppercase">
                <a class="hover:underline" asp-controller="Imoveis" asp-action="Index">Imóveis</a>
                <a class="hover:underline" asp-controller="Negociacoes" asp-action="Index">Negociações</a>
                <a class="hover:underline" asp-controller="Vistorias" asp-action="Index">Vistorias</a>
                <a class="hover:underline" asp-controller="Atividades" asp-action="Index">Pendências</a>
                <a class="hover:underline" asp-controller="Agenda" asp-action="Index">Agenda</a>
                <a class="hover:underline" asp-controller="Relatorios" asp-action="Indicadores">Relatórios</a>
            </nav>
        </div>
    </header>
    <main class="container mx-auto px-4 py-8">
        @RenderBody()
    </main>
    <footer class="bg-sky-900 text-white mt-8">
        <div class="container mx-auto px-4 py-4 text-sm flex justify-between">
            <span>© @DateTime.UtcNow.Year Ferramenta Integrada de Gestão Imobiliária</span>
            <span>Operação 100% local</span>
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>
