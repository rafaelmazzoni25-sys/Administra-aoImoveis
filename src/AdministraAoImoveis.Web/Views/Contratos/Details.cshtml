@model ContractDetailViewModel
@using System.Globalization
@using AdministraAoImoveis.Web.Domain.Enumerations
@{
    ViewData["Title"] = "Detalhes do contrato";
    var cultura = CultureInfo.GetCultureInfo("pt-BR");
}

<section class="space-y-6">
    <header class="card space-y-3">
        <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-3">
            <div>
                <h1 class="card-title">Contrato @Model.PropertyCode</h1>
                <p class="text-sm text-slate-500">@Model.PropertyTitle</p>
                <p class="text-xs text-slate-500">Interessado: @(string.IsNullOrWhiteSpace(Model.Interessado) ? "—" : Model.Interessado)</p>
            </div>
            <div class="flex gap-2">
                <a class="btn-secondary" asp-controller="Imoveis" asp-action="Details" asp-route-id="@Model.PropertyId">Imóvel</a>
                <a class="btn-secondary" asp-action="Index">Voltar</a>
            </div>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-3 text-sm">
            <div>
                <span class="text-slate-500 uppercase text-xs">Status</span>
                <div>
                    @if (Model.Ativo)
                    {
                        <span class="badge-success">Ativo</span>
                    }
                    else
                    {
                        <span class="badge-muted">Encerrado</span>
                    }
                </div>
            </div>
            <div>
                <span class="text-slate-500 uppercase text-xs">Início</span>
                <div>@Model.DataInicio.ToString("dd/MM/yyyy")</div>
            </div>
            <div>
                <span class="text-slate-500 uppercase text-xs">Término</span>
                <div>@(Model.DataFim?.ToString("dd/MM/yyyy") ?? "—")</div>
            </div>
            <div>
                <span class="text-slate-500 uppercase text-xs">Valores</span>
                <div>
                    <span class="block">Aluguel: @Model.ValorAluguel.ToString("C", cultura)</span>
                    <span class="block text-xs text-slate-500">Encargos: @Model.Encargos.ToString("C", cultura)</span>
                </div>
            </div>
        </div>
    </header>

    <section class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <section class="card space-y-4 lg:col-span-2">
            <header class="flex items-center justify-between">
                <h2 class="card-title">Documentos vinculados</h2>
                <a class="btn-secondary" asp-controller="Documentos" asp-action="Index" asp-route-propertyId="@Model.PropertyId">Biblioteca do imóvel</a>
            </header>

            @if (!Model.Documentos.Any())
            {
                <p class="empty-state">Nenhum documento gerado para este contrato.</p>
            }
            else
            {
                <table class="table text-sm">
                    <thead>
                        <tr>
                            <th>Versão</th>
                            <th>Status</th>
                            <th>Enviado em</th>
                            <th>Validade</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var documento in Model.Documentos)
                        {
                            var statusClass = documento.Status switch
                            {
                                DocumentStatus.Aprovado => "badge-success",
                                DocumentStatus.Expirado => "badge-warning",
                                DocumentStatus.Obsoleto => "badge-muted",
                                DocumentStatus.Rejeitado => "badge-danger",
                                _ => "badge-info"
                            };

                            <tr>
                                <td>v@documento.Versao @(documento.Atual ? "(Atual)" : string.Empty)</td>
                                <td><span class="badge @statusClass">@documento.Status</span></td>
                                <td>@documento.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td>@(documento.ValidoAte?.ToString("dd/MM/yyyy") ?? "—")</td>
                                <td class="text-right">
                                    <a class="link" asp-action="Download" asp-route-id="@Model.Id" asp-route-documentId="@documento.DocumentoId">Download</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </section>

        <aside class="space-y-6">
            <section class="card space-y-4">
                <header class="space-y-1">
                    <h3 class="card-title">Ações</h3>
                    <p class="text-sm text-slate-500">Gerencie o ciclo de vida do contrato.</p>
                </header>

                @if (!Model.Ativo)
                {
                    <form method="post" asp-action="Ativar" asp-route-id="@Model.Id">
                        @Html.AntiForgeryToken()
                        <button class="btn btn-primary w-full" type="submit">Ativar contrato</button>
                    </form>
                }
                else
                {
                    <form method="post" asp-action="Encerrar" asp-route-id="@Model.Id" class="space-y-3">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Encerramento.ContractId" />
                        <div>
                            <label class="input-label" asp-for="Encerramento.DataEncerramento"></label>
                            <input class="input" asp-for="Encerramento.DataEncerramento" type="date" />
                            <span class="text-xs text-red-600" asp-validation-for="Encerramento.DataEncerramento"></span>
                        </div>
                        <div>
                            <label class="input-label" asp-for="Encerramento.Observacoes"></label>
                            <textarea class="input" asp-for="Encerramento.Observacoes" rows="3"></textarea>
                        </div>
                        <button class="btn btn-danger w-full" type="submit">Encerrar contrato</button>
                    </form>
                }
            </section>

            <section class="card space-y-4">
                <header class="space-y-1">
                    <h3 class="card-title">Anexar documento assinado</h3>
                    <p class="text-sm text-slate-500">Envie a versão final assinada para substituir o modelo base.</p>
                </header>
                <form method="post" asp-action="Anexar" asp-route-id="@Model.Id" enctype="multipart/form-data" class="space-y-3">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Anexo.ContractId" />
                    <div>
                        <label class="input-label" asp-for="Anexo.Arquivo"></label>
                        <input class="input" asp-for="Anexo.Arquivo" type="file" accept=".pdf,.doc,.docx,.jpg,.png,.html" />
                        <span class="text-xs text-red-600" asp-validation-for="Anexo.Arquivo"></span>
                    </div>
                    <button class="btn btn-secondary w-full" type="submit">Enviar documento</button>
                </form>
            </section>
        </aside>
    </section>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
