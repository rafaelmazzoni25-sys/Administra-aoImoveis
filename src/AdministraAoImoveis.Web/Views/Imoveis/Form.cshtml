@model PropertyFormViewModel
@using AdministraAoImoveis.Web.Domain.Enumerations
@{
    ViewData["Title"] = Model.Id.HasValue ? "Editar imóvel" : "Novo imóvel";
}

<section class="space-y-4 max-w-4xl">
    <header>
        <h2 class="text-2xl font-semibold text-slate-800">@ViewData["Title"]</h2>
        <p class="text-sm text-slate-500">Complete os dados estruturados para garantir histórico e disponibilidade corretos.</p>
    </header>

    <form asp-action="@(Model.Id.HasValue ? "Edit" : "Create")" method="post" class="space-y-6">
        @Html.AntiForgeryToken()
        @if (Model.Id.HasValue)
        {
            <input type="hidden" asp-for="Id" />
        }

        <div asp-validation-summary="ModelOnly" class="alert alert-error"></div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <label asp-for="CodigoInterno" class="input-label"></label>
                <input asp-for="CodigoInterno" class="input" />
                <span asp-validation-for="CodigoInterno" class="input-validation"></span>
            </div>
            <div>
                <label asp-for="Titulo" class="input-label"></label>
                <input asp-for="Titulo" class="input" />
                <span asp-validation-for="Titulo" class="input-validation"></span>
            </div>
            <div class="md:col-span-2">
                <label asp-for="Endereco" class="input-label"></label>
                <input asp-for="Endereco" class="input" />
                <span asp-validation-for="Endereco" class="input-validation"></span>
            </div>
            <div>
                <label asp-for="Bairro" class="input-label"></label>
                <input asp-for="Bairro" class="input" />
                <span asp-validation-for="Bairro" class="input-validation"></span>
            </div>
            <div>
                <label asp-for="Cidade" class="input-label"></label>
                <input asp-for="Cidade" class="input" />
                <span asp-validation-for="Cidade" class="input-validation"></span>
            </div>
            <div>
                <label asp-for="Estado" class="input-label"></label>
                <input asp-for="Estado" class="input" />
                <span asp-validation-for="Estado" class="input-validation"></span>
            </div>
            <div>
                <label asp-for="Tipo" class="input-label"></label>
                <input asp-for="Tipo" class="input" />
                <span asp-validation-for="Tipo" class="input-validation"></span>
            </div>
            <div>
                <label asp-for="ProprietarioId" class="input-label"></label>
                <select asp-for="ProprietarioId" class="input">
                    <option value="">Selecione</option>
                    @foreach (var proprietario in Model.Proprietarios)
                    {
                        <option value="@proprietario.Id" selected="@(Model.ProprietarioId == proprietario.Id)">@proprietario.Nome</option>
                    }
                </select>
                <span asp-validation-for="ProprietarioId" class="input-validation"></span>
            </div>
            <div>
                <label asp-for="Area" class="input-label"></label>
                <input asp-for="Area" class="input" />
                <span asp-validation-for="Area" class="input-validation"></span>
            </div>
            <div>
                <label asp-for="Quartos" class="input-label"></label>
                <input asp-for="Quartos" class="input" />
                <span asp-validation-for="Quartos" class="input-validation"></span>
            </div>
            <div>
                <label asp-for="Banheiros" class="input-label"></label>
                <input asp-for="Banheiros" class="input" />
                <span asp-validation-for="Banheiros" class="input-validation"></span>
            </div>
            <div>
                <label asp-for="Vagas" class="input-label"></label>
                <input asp-for="Vagas" class="input" />
                <span asp-validation-for="Vagas" class="input-validation"></span>
            </div>
            <div>
                <label asp-for="StatusDisponibilidade" class="input-label"></label>
                <select asp-for="StatusDisponibilidade" asp-items="Html.GetEnumSelectList<AvailabilityStatus>()" class="input"></select>
            </div>
            <div>
                <label asp-for="DataPrevistaDisponibilidade" class="input-label"></label>
                <input asp-for="DataPrevistaDisponibilidade" class="input" type="datetime-local" value="@(Model.DataPrevistaDisponibilidade?.ToLocalTime().ToString("yyyy-MM-ddTHH:mm"))" />
            </div>
        </div>

        <div>
            <label asp-for="CaracteristicasJson" class="input-label"></label>
            <textarea asp-for="CaracteristicasJson" class="input" rows="4"></textarea>
            <span asp-validation-for="CaracteristicasJson" class="input-validation"></span>
        </div>

        <div class="flex justify-end gap-2">
            <a class="btn-secondary" asp-action="Index">Cancelar</a>
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
