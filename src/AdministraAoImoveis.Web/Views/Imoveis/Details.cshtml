@model PropertyDetailViewModel
@using System
@{
    ViewData["Title"] = "Detalhes do Imóvel";
}
<section class="space-y-8">
    <header class="card space-y-3">
        <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-4">
            <div>
                <h2 class="card-title">@Model.CodigoInterno - @Model.Titulo</h2>
                <p class="text-sm text-slate-500">@Model.Endereco - @Model.Bairro - @Model.Cidade/@Model.Estado</p>
            </div>
            <div class="flex flex-wrap gap-2">
                <a class="btn-secondary" asp-action="Edit" asp-route-id="@Model.Id">Editar cadastro</a>
                <a class="btn-secondary" asp-action="Index">Voltar</a>
            </div>
        </div>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-2 text-sm mt-4">
            <div>Área: <strong>@Model.Area m²</strong></div>
            <div>Quartos: <strong>@Model.Quartos</strong></div>
            <div>Banheiros: <strong>@Model.Banheiros</strong></div>
            <div>Vagas: <strong>@Model.Vagas</strong></div>
        </div>
        <p class="mt-4 text-xs uppercase tracking-wide text-slate-500">Status atual: <strong>@Model.StatusDisponibilidade</strong></p>
        <p class="text-xs text-slate-500">Disponível a partir de: @(Model.DataPrevistaDisponibilidade?.ToString("dd/MM/yyyy") ?? "--")</p>
        <form asp-action="AlterarDisponibilidade" method="post" class="mt-4 grid grid-cols-1 md:grid-cols-4 gap-2 items-end">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <div>
                <label class="input-label" for="statusDisponibilidade">Novo status</label>
                <select id="statusDisponibilidade" name="status" class="input">
                    @foreach (var status in Enum.GetValues(typeof(AdministraAoImoveis.Web.Domain.Enumerations.AvailabilityStatus)).Cast<AdministraAoImoveis.Web.Domain.Enumerations.AvailabilityStatus>())
                    {
                        <option value="@status">@status</option>
                    }
                </select>
            </div>
            <div>
                <label class="input-label" for="disponivelEm">Disponível em (opcional)</label>
                <input id="disponivelEm" name="disponivelEm" type="datetime-local" class="input" />
            </div>
            <div class="md:col-span-2 flex justify-end">
                <button class="btn btn-primary" type="submit">Atualizar disponibilidade</button>
            </div>
        </form>
    </header>

    <section class="card">
        <h3 class="card-title">Negociações ativas</h3>
        @if (!Model.Negociacoes.Any())
        {
            <p class="empty-state">Nenhuma negociação cadastrada.</p>
        }
        else
        {
            <ul class="divide-y divide-slate-200">
                @foreach (var negociacao in Model.Negociacoes)
                {
                    <li class="py-3">
                        <div class="flex justify-between text-sm">
                            <span>@negociacao.Interessado?.Nome</span>
                            <span class="font-semibold">@negociacao.Etapa</span>
                        </div>
                        <p class="text-xs text-slate-500">Criada em @negociacao.CreatedAt:dd/MM/yyyy</p>
                    </li>
                }
            </ul>
        }
    </section>

    <section class="card space-y-3">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-3">
            <h3 class="card-title">Contratos</h3>
            <div class="flex flex-wrap gap-2">
                @if (Model.ContratoAtivo is not null)
                {
                    <a class="btn-secondary" asp-controller="Contratos" asp-action="Details" asp-route-id="@Model.ContratoAtivo.Id">Contrato ativo</a>
                }
                <a class="btn-secondary" asp-controller="Contratos" asp-action="Create" asp-route-propertyId="@Model.Id">Gerar contrato</a>
            </div>
        </div>
        @if (!Model.Contratos.Any())
        {
            <p class="empty-state">Nenhum contrato cadastrado para este imóvel.</p>
        }
        else
        {
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Interessado</th>
                        <th>Vigência</th>
                        <th>Valor</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var contrato in Model.Contratos)
                    {
                        var inicio = contrato.DataInicio.ToString("dd/MM/yyyy");
                        var fim = contrato.DataFim?.ToString("dd/MM/yyyy") ?? "--";
                        <tr>
                            <td>@(string.IsNullOrWhiteSpace(contrato.Interessado) ? "—" : contrato.Interessado)</td>
                            <td>@inicio - @fim</td>
                            <td>
                                <span class="block">@contrato.ValorAluguel.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("pt-BR"))</span>
                                <span class="block text-xs text-slate-500">Encargos: @contrato.Encargos.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("pt-BR"))</span>
                            </td>
                            <td>
                                @if (contrato.Ativo)
                                {
                                    <span class="badge-success">Ativo</span>
                                }
                                else
                                {
                                    <span class="badge-muted">Encerrado</span>
                                }
                            </td>
                            <td class="text-right">
                                <a class="link" asp-controller="Contratos" asp-action="Details" asp-route-id="@contrato.Id">Detalhes</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </section>

    <section class="card space-y-3">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-3">
            <h3 class="card-title">Documentos</h3>
            <a class="btn-secondary" asp-controller="Documentos" asp-action="Index" asp-route-propertyId="@Model.Id">Gerenciar documentos</a>
        </div>
        @if (!Model.Documentos.Any())
        {
            <p class="empty-state">Nenhum documento cadastrado.</p>
        }
        else
        {
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Descrição</th>
                        <th>Status</th>
                        <th>Versão</th>
                        <th>Enviado em</th>
                        <th>Validade</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var doc in Model.Documentos)
                    {
                        var statusClass = doc.Status switch
                        {
                            AdministraAoImoveis.Web.Domain.Enumerations.DocumentStatus.Aprovado => "bg-emerald-100 text-emerald-700",
                            AdministraAoImoveis.Web.Domain.Enumerations.DocumentStatus.Expirado => "bg-amber-100 text-amber-700",
                            AdministraAoImoveis.Web.Domain.Enumerations.DocumentStatus.Rejeitado => "bg-red-100 text-red-700",
                            AdministraAoImoveis.Web.Domain.Enumerations.DocumentStatus.Obsoleto => "bg-slate-100 text-slate-600",
                            _ => "bg-blue-100 text-blue-700"
                        };
                        <tr>
                            <td>@doc.Descricao</td>
                            <td>
                                <span class=$"inline-flex px-2 py-1 rounded-full text-xs font-semibold {statusClass}">@doc.Status</span>
                                @if (doc.Expirado)
                                {
                                    <span class="block text-[11px] text-red-600">Expirado</span>
                                }
                            </td>
                            <td>v@doc.Versao</td>
                            <td>@doc.CreatedAt:dd/MM/yyyy</td>
                            <td>@(doc.ValidoAte?.ToString("dd/MM/yyyy") ?? "-")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </section>

    <section class="card">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-3">
            <h3 class="card-title">Ordens de Manutenção</h3>
            <a class="btn-secondary" asp-controller="Manutencoes" asp-action="Create" asp-route-imovelId="@Model.Id">Nova ordem</a>
        </div>
        @if (!Model.Manutencoes.Any())
        {
            <p class="empty-state">Nenhuma ordem de manutenção aberta.</p>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Título</th>
                        <th>Status</th>
                        <th>Abertura</th>
                        <th>Previsão</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ordem in Model.Manutencoes.Take(10))
                    {
                        <tr>
                            <td>@ordem.Titulo</td>
                            <td>
                                    <span class="inline-flex items-center gap-2">
                                        <span class="font-semibold">@ordem.Status</span>
                                        @if (ordem.EmExecucao)
                                        {
                                            <span class="inline-flex px-2 py-1 rounded-full bg-amber-100 text-amber-700 text-[11px] font-semibold uppercase tracking-wide">Em execução</span>
                                        }
                                    </span>
                            </td>
                            <td>@ordem.CriadoEm:dd/MM/yyyy</td>
                            <td>@(ordem.PrevisaoConclusao?.ToString("dd/MM/yyyy") ?? "-")</td>
                            <td class="text-right">
                                <a class="link" asp-controller="Manutencoes" asp-action="Details" asp-route-id="@ordem.Id">detalhes</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </section>

    <section class="card">
        <h3 class="card-title">Vistorias</h3>
        @if (!Model.Vistorias.Any())
        {
            <p class="empty-state">Nenhuma vistoria registrada.</p>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Tipo</th>
                        <th>Status</th>
                        <th>Agendada para</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var vistoria in Model.Vistorias)
                    {
                        <tr>
                            <td>@vistoria.Tipo</td>
                            <td>@vistoria.Status</td>
                            <td>@vistoria.AgendadaPara:dd/MM/yyyy HH:mm</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </section>

    <section class="card">
        <h3 class="card-title">Pendências e Tarefas</h3>
        @if (!Model.Atividades.Any())
        {
            <p class="empty-state">Nenhuma pendência aberta.</p>
        }
        else
        {
            <ul class="divide-y divide-slate-200">
                @foreach (var atividade in Model.Atividades)
                {
                    <li class="py-3 flex justify-between text-sm">
                        <span>@atividade.Titulo</span>
                        <span class="font-semibold">@atividade.Status</span>
                    </li>
                }
            </ul>
        }
    </section>

    <section class="card">
        <h3 class="card-title">Histórico</h3>
        @if (!Model.Historico.Any())
        {
            <p class="empty-state">Sem eventos registrados.</p>
        }
        else
        {
            <ol class="space-y-2">
                @foreach (var evento in Model.Historico)
                {
                    <li>
                        <div class="text-xs text-slate-500">@evento.OcorreuEm:dd/MM/yyyy HH:mm - @evento.Usuario</div>
                        <div class="text-sm">@evento.Titulo</div>
                        <div class="text-slate-600 text-xs">@evento.Descricao</div>
                    </li>
                }
            </ol>
        }
    </section>
</section>
